<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signupbg2"
    tools:context=".ItmaSignupPage2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="120dp"
            app:srcCompat="@drawable/hitmalogo"/>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <EditText
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/whitelineexterior"
                android:hint="Date of Birth"
                android:textColorHint="#515a5a"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:padding="15dp"
                android:id="@+id/edtDate"
                android:editable="false"
                android:drawableRight="@drawable/bh"/>

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:paddingTop="10dp"-->
            <!--android:textColor="#ffffff"-->
            <!--android:textSize="15dp"-->
            <!--android:text="State of Residence"/>-->

            <Spinner
                android:id="@+id/states"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:prompt="@string/state_prompt"
                android:background="@drawable/whitelineexterior"/>

            <Spinner
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:prompt="@string/gender_prompt"
                android:background="@drawable/whitelineexterior"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you a/an"
                android:paddingTop="20dp"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingBottom="10dp"/>

            <RadioGroup
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/radioGrp">

                <RadioButton
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:background="@drawable/whitelineexterior"
                    android:text="NYSC Corp Member"
                    android:padding="15dp"
                    android:textSize="15dp"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:textColor="#ffffff"
                    android:button="@null"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/nysc"
                    android:checked="true"/>

                <RadioButton
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:background="@drawable/whitelineexterior"
                    android:text="Civil Servant"
                    android:padding="15dp"
                    android:textSize="15dp"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:textColor="#ffffff"
                    android:button="@null"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/civilservant"/>

                <RadioButton
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:background="@drawable/whitelineexterior"
                    android:text="Student"
                    android:padding="15dp"
                    android:textSize="15dp"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:textColor="#ffffff"
                    android:button="@null"
                    android:id="@+id/student"/>

            </RadioGroup>



        </LinearLayout>


        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedwhite"
            android:text="SIGNUP"
            android:textSize="20dp"
            android:id="@+id/btnSignUp"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:textAlignment="textEnd"
            android:paddingRight="60dp"/>


    </LinearLayout>

</ScrollView>