<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".ItmaLogin2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hitmalogo"
            android:layout_marginTop="120dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/whitelineexterior"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="#ffffff"
            android:textSize="15dp"
            android:id="@+id/username"
            android:textColor="#ffffff"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:drawableRight="@drawable/usericon"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/whitelineexterior"
            android:hint="Password"
            android:id="@+id/pword"
            android:textColorHint="#ffffff"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:drawableRight="@drawable/passwordicon"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxRememberMe"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="Remember me"
            android:textColor="#ffffff"
            android:buttonTint="#ffffff"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/whitelineexterior"
            android:text="LOG IN"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:id="@+id/btnLog"
            android:drawableLeft="@drawable/loginicon"
            android:textAlignment="textStart"
            android:paddingLeft="70dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:padding="20dp"
            android:id="@+id/txtForgotPassword"/>

    </LinearLayout>

</ScrollView>