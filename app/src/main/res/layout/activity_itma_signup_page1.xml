<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signupbg1"
    tools:context=".ItmaSignupPage1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">



        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginTop="120dp"
            android:focusableInTouchMode="true"
            app:srcCompat="@drawable/hitmalogo"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/whitelineexterior"
            android:hint="Full Name"
            android:id="@+id/full_name"
            android:textColorHint="#515a5a"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:drawableRight="@drawable/bc"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/whitelineexterior"
            android:hint="Your Email Address"
            android:id="@+id/email"
            android:textColorHint="#515a5a"
            android:textSize="15dp"
            android:inputType="textEmailAddress"
            android:textColor="#ffffff"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:drawableRight="@drawable/bf"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/whitelineexterior"
            android:hint="Your Phone Number"
            android:id="@+id/phone"
            android:textColorHint="#515a5a"
            android:textSize="15dp"
            android:inputType="number"
            android:textColor="#ffffff"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:drawableRight="@drawable/bg"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/whitelineexterior"
            android:hint="Password"
            android:id="@+id/pword"
            android:textColorHint="#515a5a"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:drawableRight="@drawable/bd"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/whitelineexterior"
            android:hint="Repeat Password"
            android:id="@+id/confirmpword"
            android:textColorHint="#515a5a"
            android:textSize="15dp"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:drawableRight="@drawable/bd"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedwhite"
            android:text="NEXT"
            android:textSize="20dp"
            android:id="@+id/btnNext"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            android:textAlignment="textEnd"
            android:paddingRight="70dp"/>


    </LinearLayout>

</ScrollView>