<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.bg">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@fonts/Montserrat-Regular.otf</item>
        <item name="android:textSize">8dp</item>
    </style>

    <style name="NavigationText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">10dp</item>
        <item name="fontFamily">@fonts/Montserrat-Light.otf</item>
    </style>

    <style name="MYswitch" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorControlActivated" tools:targetApi="lollipop">#4ed95a</item>
        <item name="android:textSize">10dp</item>
        <item name="fontFamily">@fonts/Montserrat-Light.otf</item>
    </style>


    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">8dp</item>
        <item name="android:textColor">#000000</item>
        <item name="backgroundTint" tools:targetApi="lollipop">#ffffff</item>
    </style>



</resources>
